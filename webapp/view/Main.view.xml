<mvc:View
	controllerName="com.myorg.myapp.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns:cc="com.myorg.myapp.control"
	core:require="{
		formatter: 'com/myorg/myapp/model/formatter'
	}">

	<Page id="page" title="Current Weather">
		<headerContent>
			<Toolbar>
				<ToolbarSpacer />
				<Button text="Refresh" icon="sap-icon://refresh" press=".onRefreshPress" />
			</Toolbar>
		</headerContent>
		<content>
			<VBox
				fitContainer="true"
				alignItems="Center"
				justifyContent="Center"
				class="sapUiSmallMargin">

				<form:SimpleForm
					id="weatherForm"
					editable="false"
					layout="ResponsiveGridLayout"
					labelSpanL="4"
					labelSpanM="4"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanL="2"
					emptySpanM="2"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
					class="sapUiMediumMarginTop">

					<Title text="Current Weather Details" />
					<Input
						id="location"
						valueLiveUpdate="true"
						width="auto"
						change=".locationChange"
						placeholder="Enter Location"
						class="sapUiSmallMarginBottom"
						ariaLabelledBy="locationLabel" />
					<Label text="Location" />
					<Text
						text="{/placeName}" class="sapUiSmallMarginBottom" />

					<Label
						text="Temperature" />
					<Text text="{/current_weather/temperature} °C"
						class="highlightText" />

					<Label text="Wind Speed" />
					<Text
						text="{/current_weather/windspeed} km/h" />

					<Label text="Wind Direction" />
					<Text
						text="{/current_weather/winddirection} °" />

					<Label text="Wind Visualization" />
					<layout:HorizontalLayout>
						<cc:WindDirection direction="{/current_weather/winddirection}"
							class="sapUiTinyMarginTop" />
					</layout:HorizontalLayout>
				</form:SimpleForm>

				<FormattedText
					class="sapUiTinyMarginTop"
					htmlText="&lt;a href='https://open-meteo.com/' target='_blank'&gt;Weather data by Open-Meteo.com&lt;/a&gt; under &lt;a href='https://creativecommons.org/licenses/by/4.0/' target='_blank'&gt;Attribution 4.0 International (CC BY 4.0)&lt;/a&gt; license"
					width="100%"
					textAlign="Center" />
			</VBox>
		</content>
	</Page>

</mvc:View>